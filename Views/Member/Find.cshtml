@using WebApp.Models;
@model IEnumerable<Member>

<div>
<form asp-controller="Member" asp-action="Find" method="POST"><input type="text" name="keyword" placeholder="input first name or last name"/>
        <input type="submit" value="Find"/>
</form>
<form >
    <a asp-controller="Member" asp-action="Create" method="POST">Create new member</a>
    <table border="1px">
        <tr>
            <th>Full name</th>
            <th>Gender</th>
            <th>Date of birth</th>
            <th>Phone Number</th>
            <th>Birth place</th>
            <th></th>
        </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.Gender</td>
            <td>@item.DoB</td>
            <td>@item.PhoneNumber</td>
            <td>@item.BirthPlace</td>
            <td>@Html.ActionLink("Edit","Edit","Member", new{FirstName = item.FirstName,LastName = item.LastName}) @Html.ActionLink("Delete","Delete","Member", new{FirstName = item.FirstName,LastName = item.LastName})</td>
        </tr>
    }    
       
    </table>    
</form>
    
</div>
<style>
    th{
        text-align: center;
    }
</style>
   